<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:lab6_7">

    <Style x:Key="LightDarkGrid" TargetType="Grid">
        <Setter Property="Background" Value="#e0c0bf"></Setter>
    </Style>

    <Style x:Key="LightDarkMenu" TargetType="Menu">
        <Setter Property="Background" Value="#f2dcdf"></Setter>
        <Setter Property="ItemsControl.Foreground" Value="Black"></Setter>
    </Style>
    <Style x:Key="LightDarkTabItems" TargetType="TabItem">
        <Setter Property="Background" Value="LavenderBlush"></Setter>
        <Setter Property="ItemsControl.Foreground" Value="Black"></Setter>
    </Style>
    <Style x:Key="LightDarkTextBlock" TargetType="TextBlock">
        <Setter Property="ItemsControl.Foreground" Value="Black"></Setter>
    </Style>
    <Style x:Key="LightDarkTextBox" TargetType="TextBox">
        <Setter Property="Background" Value="#f2dcdf"></Setter>
        <Setter Property="ItemsControl.Foreground" Value="Black"></Setter>
    </Style>

    <Style x:Key="LightDarkButton" TargetType="Button">
        <Setter Property="Background" Value="MistyRose"></Setter>
        <Setter Property="ItemsControl.Foreground" Value="Black"></Setter>
    </Style>


</ResourceDictionary>